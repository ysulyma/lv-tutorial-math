{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "incremental": true,
    "jsx": "react-jsx",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "moduleResolution": "node",
    "pretty": true,
    "removeComments": true,
    "target": "es2017",

    "baseUrl": ".",
    "paths": {
      "@lib/*": ["./lib/*"],
      "@env/*": ["./lib/*", "./src/@development/*", "./src/@production/*"]
    }
  },
  "files": ["./src/index.tsx"]
}
